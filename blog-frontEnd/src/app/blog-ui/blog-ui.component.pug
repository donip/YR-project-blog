header
  div
    h2 BlogPost UI
    input.form-control(type='text', name='search', id='search' ,[(ngModel)]='searchWord')
    button.btn.btn-info(type='button', (click)='searchPostByTitle()') Keresés
main
  button.btn.btn-info(type='button', (click)='getUser()')
  section
    .container
      .card.col-12(*ngFor='let post of datas; let i = index;trackBy: trackByFn')
        //- img.card-img-top(src='{{post.picture}}', alt='Card image cap')
        img.card-img-top(src='../../assets/default-blog.jpg', alt='Card image cap')
        .card-body
          h5.card-title {{post.title}}
          pre.card-text.col-12 {{post.content}}
        .card-footer
          span Címkék: 
          a(href="") {{post.tags}}
